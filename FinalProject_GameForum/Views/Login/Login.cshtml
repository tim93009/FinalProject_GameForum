<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
    <form action="/Login/Login" method="post" class="container p-3 mt-5 border  shadow col-lg-4">
        <p class="h1 text-center">登入</p>
        <div class="mb-3 mt-3 container-sm ">
            <label for="Userid" class="form-label"></label>
            <input type="text" class="form-control" id="Userid" placeholder="輸入帳號" name="Account" required>
        </div>
        <div class="mb-3 container-sm">
            <label for="pwd" class="form-label"></label>
            <input type="password" class="form-control" id="pwd" placeholder="輸入密碼" name="Password_P" required>
        </div>


        <div class="m-3 d-flex justify-content-between align-items-center">
            <div class="form-check">
                
                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="Rememberme" value="true">
                <label class="form-check-label" for="exampleCheck1">保持登入狀態</label>
            </div>
            <a asp-action="ForgotPW">忘記密碼?</a>
        </div>
        <div class="d-grid gap-2 col-10 p-2 mx-auto">
            <button type="submit" class="btn btn-primary">登入</button>
        </div>
        <div class="text-center m-3 p-2">
            <a>還沒有帳號嗎?</a>
            <a asp-action="Register">我要註冊</a>
        </div>

        <hr />
        <div class="container m-3 ">
            <div class="row me-3 text-center">
                <div class="col mt-1 ">
                    <a href="/Login/ThirdLogin?provider=Microsoft"><img src="~/img/Login/Microsoft.png" class="rounded-circle" style="width: 40px;"></a>
                </div>
                <div class="col mt-1">
                    <a href="/Login/ThirdLogin?provider=Google"><img src="~/img/Login/web_light_rd_na@1x.png" class="rounded-circle" style="width: 45px;"></a>
                </div>
                <div class="col ">
                    <a href="/Login/ThirdLogin?provider=Facebook"><img src="~/img/Login/icons8-facebook-48.png" class="rounded-circle" style="width: 50px;"></a>
                </div>
            </div>
        </div>
        @if (TempData["Error"] != null)
        {
            <script>
                      document.addEventListener("DOMContentLoaded", function () {
                    var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                    errorModal.show();
                });
            </script>



            <!-- Bootstrap 5 Modal -->
            <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="errorModalLabel">錯誤</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            @TempData["Error"]
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                        </div>
                    </div>
                </div>
            </div>
        }


    </form>

    @if (TempData["Asept"] != null)
    {
        <script>
                  document.addEventListener("DOMContentLoaded", function () {
                var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
            });
        </script>



        <!-- Bootstrap 5 Modal -->
        <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="errorModalLabel">正確</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @TempData["Asept"]
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <script>
                  document.addEventListener("DOMContentLoaded", function () {
                var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
            });
        </script>



        <!-- Bootstrap 5 Modal -->
        <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="errorModalLabel">正確</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @TempData["Success"]
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>