<link rel="stylesheet" href="~/css/ShoppingMall/ShoppingMall.css" asp-append-version="true" />

<!-- 嵌入商城導覽列 -->
@await Html.PartialAsync("ShoppingMall_Nav")

<p>這裡是商城頁面</p>


<div class="row g-0">
	<div class="col-sm-12">
		<!-- 區塊 1 -->
		<div class="section bg-primary text-white">
			@* 輪播圖 *@
			<div id="carouselExampleIndicators" class="carousel slide " data-bs-ride="carousel">
				@* 指示器 *@
				<div class="carousel-indicators">
					<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
					<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
					<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
				</div>
				@* 圖片 *@
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img src="~/img/product/97f39860d771a87c21972e0c0f1snyv5.jpg" class="d-block w-100" style="object-fit: contain; height: 20vh;" alt="...">
					</div>
					<div class="carousel-item">
						<img src="~/img/product/17de292a8fb7805796cf99d3001p39z5.jpg" class="d-block w-100" style="object-fit: contain; height: 20vh;" alt="...">
					</div>
					<div class="carousel-item">
						<img src="~/img/product/29adba0217e3641578f2dbb3831qm415.jpg" class="d-block w-100" style="object-fit: contain; height: 20vh;" alt="...">
					</div>
				</div>
				@* 前後按鈕 *@
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</div>
		<br />
	</div>
</div>

<div class="row g-0">
	<div class="col-sm-10">
		<!-- 區塊 2 -->
		<div class="section bg-success text-white">
			<h2>排行榜</h2>
			<p>這裡是區塊 B 的內容。可以放置圖片、文字或其他元素。</p>
		</div>

		<!-- 區塊 3 -->
		<div class="section bg-danger text-white">
			<h2>實體商品</h2>
			<p>這裡是 商品 的內容。可以用來展示更多資訊。</p>
			<a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">商品連結</a>
		</div>

		<br />

		<!-- 結帳 -->
		<div class="section bg-info text-white">
			<h2>結帳</h2>
			<p>這裡是 結帳區塊 的內容。可以用來展示更多資訊。</p>
			<a class="nav-link text-white" asp-area="" asp-controller="Checkout" asp-action="Index">結帳連結</a>
		</div>
	</div>

	<!-- 側邊欄 -->
	<div class="col-sm-2 bg-warning text-white">
		<div class="sidebar">
			<h3>廣告</h3>
			<img src="~/img/product/97f39860d771a87c21972e0c0f1snyv5.jpg" class="d-block w-100 mb-3" style="object-fit: contain; height: 100px;" alt="...">
			<img src="~/img/product/97f39860d771a87c21972e0c0f1snyv5.jpg" class="d-block w-100 mb-3" style="object-fit: contain; height: 100px;" alt="...">
			<img src="~/img/product/97f39860d771a87c21972e0c0f1snyv5.jpg" class="d-block w-100 mb-3" style="object-fit: contain; height: 100px;" alt="...">			
		</div>
	</div>
</div>
