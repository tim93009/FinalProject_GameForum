@foreach (var article in Model)
{
	<div class="card mb-3">
		<div class="row g-0">
			@if (article.ArticleGroup?.CoverImage != null)
			{
				<div class="col-md-2">
					<img src="data:image/png;base64,@Convert.ToBase64String(article.ArticleGroup.CoverImage)" class="img-fluid rounded-start" alt="Article Image">
				</div>
			}
			<div class="col-md-10">
				<div class="card-body">

					<p class="card-text">【@article.ArticleGroup?.Category】</p>
					<h5 class="card-title">@article.ArticleGroup?.ArticleTitle</h5>
					<p class="card-text text-truncate">@article.ArticleContent</p>
					<p class="card-text"><small class="text-muted">觀看人數: @article.ArticleGroup?.Views</small></p>
					<p class="card-text">
						<small class="text-muted">
							作者: @article.User.Nickname | 發布時間: @article.PostDate?.ToString("yyyy-MM-dd HH:mm")
						</small>
					</p>
					<p class="card-text">
						<small class="text-muted">
							最後編輯: @article.EditDate?.ToString("yyyy-MM-dd HH:mm")
						</small>
					</p>

				</div>
			</div>
		</div>
	</div>
}
