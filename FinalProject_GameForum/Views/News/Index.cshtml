<link rel="stylesheet" href="~/css/News/Index.css" asp-append-version="true" />

@{

}
@await Html.PartialAsync("_LayoutNews")
@model IEnumerable<FinalProject_GameForum.Models.News>

<div class="container">
    <div class="carousel">
        @* 輪播圖 *@
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            @* 圖片 *@
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <a href="/News/News" ><img src="~/img/news/mlb.png" class="rounded mx-auto d-block " style="height:450px" alt="..."></a>
                    <div class="carousel-caption d-none d-md-block">
                        <a href="/News/News" style="color:white"><h5>《鬼滅之刃》與美國職棒大聯盟展開合作企劃 大谷使出「打擊之呼吸」猛力一擊</h5></a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/img/news/zero.jpg" class="rounded mx-auto d-block" style="height:450px" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>《絕區零》釋出「薇薇安」代理人檔案</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/img/news/mhn.jpg" class="rounded mx-auto d-block" style="height:450px" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>《Monster Hunter Now》SEASON 5「劃破春日的劍尾」正式登場 追加斬龍與青熊獸</h5>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev" style="background-color:black;opacity :0.5">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next" style="background-color:black;opacity :0.5">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <br />
    @foreach (var news in Model)
    {
        <div class="box-container">
            <div class="news-img">
                <a href="/News/News/@news.NewsId"><img src="@Url.Content(news.ImageUrl)" style="width:216px"/></a>
            </div>
            <div>
                <h1>
                    <a href="/News/News/@news.NewsId">@news.NewsTitle</a>
                </h1>
                <p>
                    @news.NewsContent
                    <a href="/News/News/@news.NewsId">繼續閱讀</a>
                </p>
            </div>
        </div>
    }