@{
    var user = Model.owner.UserId;
}
@model PersonalView
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <style>
        table, td, th {
            border: 1px solid gainsboro;
            height: 50px;
        }

            td:first-child {
                text-align: center;
            }

            td:last-child {
                text-align: center;
            }

        th {
            text-align: center
        }
    </style>
</head>

<body>
    <div class="container-md mt-5 ">
        <div class="row">
            <!-- 左側內容 -->
            <div class="col-10">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">

                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-link active" href="/Personal/Personal?ownerid=@user">個人首頁</a>
                                <a class="nav-link" href="/Personal/Collect?ownerid=@user">文章收藏</a>
                                <a class="nav-link" href="/Personal/Log?ownerid=@user">個人日誌</a>
                                <a class="nav-link" href="/Personal/Friends?ownerid=@user&status=Friends">好友圈</a>
                                <a class="nav-link" asp-controller="Setting" asp-action="Setting">會員資訊</a>
                            </div>
                        </div>
                    </div>
                </nav>
                <div class="col-12">
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="fw-bolder text-center">個人文章</h5>
                        </div>
                        <table>
                            <tr>
                                <th>No.</th>
                                <th>標題</th>
                                <th>發表時間</th>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>【問題】同樣情境(演算、選題)，手動能過，自動應該能過啊，是AI太弱還是要自動玩家加好加滿？</td>

                                <td>2025-03-11</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="container-">
                    <div class="row">
                        <div class="card">
                            <div class="card-body">
                                <div>
                                    <img src="@(Model.owner.PhotoUrl ?? "/img/Login/headphoto.jpg")" class="rounded-circle" height="50px" width="50px">
                                    <p class="mt-2"><strong>帳號:</strong> @user</p>
                                    <p><strong>暱稱:</strong> @Model.owner.Nickname</p>
                                    <p><strong>好友數:</strong> @Model.friends.Count</p>
                                </div>
                                <!-- 這邊放置右側卡片內容 -->
                            </div>
                        </div>
                        <div class="mt-3 ms-4">
                            @if (Model.Isowner)
                            {
                                <a href="/Personal/Friends?ownerid=@user&status=Followings" class="btn btn-success" id="btn-following">追蹤管理</a>
                                <a href="/Personal/Friends?ownerid=@user&status=Friends" class="btn btn-success active" id="btn-friends">好友圈</a>
                            }
                            else
                            {
                                if (Model.Isfriend)
                                {
                                    <button class="btn btn-success btn-sm" disabled> 已是好友</button>
                                }
                                else
                                {
                                    <a href="/Personal/AddFriend?requestid=@user" class="me-4 btn btn-success btn-sm">加好友</a>
                                }


                                if (Model.IsFollow)
                                {
                                    <button class="me-4 btn btn-success btn-sm" disabled> 已追蹤</button>
                                }
                                else
                                {
                                    <a href="/Personal/AddFollow?requestid=@user" class="me-4 btn btn-success btn-sm"> 追蹤</a>
                                }



                            }


                        </div>
                    </div>
                </div>
            </div>

        </div>
        </div>
</body>

</html>