<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FinalProject_GameForum</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/Article/Article.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FinalProject_GameForum.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="body">
	<header>
		<nav class="navbar" style="padding:0px">
			<div class="container-fluid" style="display: flex; justify-content: space-between; align-items: center; background-color:black;">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/img/Layout/gamer.jpg" width="100px" />
				</a>

				<!-- 搜索列 -->
				<div class="search-container" style="flex: 1; display: flex; justify-content: center;">
					<form class="search" action="action_page.php" style="width:1%">
						<input type="text" placeholder="Searching.." name="search">
						<button type="submit"><i class="fa fa-search"></i></button>
					</form>
				</div>

				<!--個人圖片-->
				<div>
					<div style="color:aliceblue; margin-right:50px">
						<img src="~/img/Login/btn_base.png"> <!--放個人圖片用 先放line替代-->
						<!--登入註冊-->
						<a class="m-3" asp-controller="Login" asp-action="Login">登入</a>
						<a class="m-3" asp-controller="Login" asp-action="Register">註冊</a>
					</div>
				</div>
			</div>

			<!-- 漢堡選單 -->
			<div class="hamburger-menu" id="hamburgerMenu">
				<div class="bar"></div>
				<div class="bar"></div>
				<div class="bar"></div>
			</div>

			<!-- 彈出提示框 -->
			<div class="popup" id="popup">
				<div class="popup-content">
					<h2>服務選單</h2>
					<br>
					<!-- 新增5組圖片+文字 -->
					<ul class="image-text-list">
						<li class="image-text-item">
							<a href="/News/Index"><img src="~/img/Layout/newspaper.png" alt="圖片1"></a>
							<p>新聞區</p>
						</li>
						<li class="image-text-item">
							<a href=""><img src="~/img/Layout/discussion.png" alt="圖片2"></a>
							<p>討論區</p>
						</li>
						<li class="image-text-item">
							<a href="/ShoppingMall/Index"><img src="~/img/Layout/shop.png" alt="圖片3"></a>
							<p>商城</p>
						</li>
						<li class="image-text-item">
							<a href="/CustomerServiceIssues/Index"><img src="~/img/Layout/request.png" alt="圖片4"></a>
							<p>客服中心</p>
						</li>
						<li class="image-text-item">
							<a href="/Setting/Setting"><img src="~/img/Layout/configuration.png" alt="圖片5"></a>
							<p>設置</p>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<nav class="navbar p-0 article-navbar">
			<div class="container-fluid">
				<div class="col-lg-2"></div>
				<div class="col-lg-8">
					<div class="title-content">
						<a class="m-3" asp-action="Index" asp-controller="Discussion">版面</a>
						<a class="m-3" asp-action="Index" asp-controller="Discussion">文章列表</a>
					</div>
				</div>
				<div class="row col-lg-2">
					<div class="col-xxl-4 ">
					</div>
					<div class="col-xxl-4 col-lg-6">
						<button class="btn btn-outline-info" onclick="location.href='@Url.Action("Index", "Discussion")'">訂閱</button>
					</div>
					<div class="col-xxl-4 col-lg-6">
						<button class="btn btn-outline-info" onclick="location.href='@Url.Action("Index", "ArticleEdit")'">回覆</button>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<div class="selectFloor">
		<p>前往樓層</p>
		<input type="text" placeholder="?樓" style="width:50px;" />
	</div>

	<div class="goTop">
		<a href="#" class="goTopBtn jq-goTop">
			<img src="/img/Layout/tile_0272.png" alt="Go to top" class="goTopImage" id="goTopImage">
			<span class="goTopText">TOP</span>
		</a>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - FinalProject_GameForum - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/Views/Shared/_Layout.cshtml.js" asp-append-version="true"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
