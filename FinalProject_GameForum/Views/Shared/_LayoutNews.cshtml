@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section ExtraNavbar{
    <nav class="extra-navbar">
        <div class="container-fluid">            
            <ul>
                <li><a href="/News/Index">綜合新聞</a></li>
                <li><a href="">手機</a></li>
                <li><a href="">PC</a></li>
                <li><a href="">TV</a></li>
                <li><a href="">電競</a></li>
            </ul>
            <div class="search-container">
                <form class="search" id="searchForm" action="#" method="get">
                    <input type="text" id="searchInput" placeholder="搜尋新聞" name="search">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
            <div class="btn-container">
                <button class="btn btn-primary" onclick="scrollToMessage()">留言</button>                
            </div>
        </div>        
    </nav>
}
<div class="news-content">
    @RenderBody()
</div>

<!-- 留言按鈕 -->
<script>
    function scrollToMessage() {
        const target = document.getElementById('message');
        if (target) {
            const targetPosition = target.getBoundingClientRect().top + window.scrollY - 200;
            window.scrollTo({
                top: targetPosition,
                behavior: 'smooth'
            });
        }
    }
</script>