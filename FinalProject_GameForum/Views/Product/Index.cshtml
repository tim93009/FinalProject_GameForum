<!-- 嵌入商城導覽列 -->
@await Html.PartialAsync("ShoppingMall_Nav")

<p>這裡是商品頁面</p>

<!-- 商品資訊 -->
<div class="row g-0">
    <div class="col-sm-3">
        <div class="section bg-success text-white">
            <h2>商品資訊</h2>
            <a href="" class="detail-img-block">
                <span class="img-color-ns">NS</span>
                <div class="img-container">
                    <img src="https://p2.bahamut.com.tw/B/2KU/08/4367c592fecec4732ea2ef21371tbe85.JPG" alt="products-img">
                </div>
            </a>
            <div class="detail-name-block">
                <span class="color-ns">NS</span>
                <span class="pokemon-font">《寶可夢傳說 Z-A》中文版</span>
            </div>
            <div class="detail-info-block">
                <div class="products-version">
                    <p class="version-title">商品狀態</p>
                    <p class="version-content">熱烈預購中</p>
                </div>                

                <img src="https://i2.bahamut.com.tw/acg/TW-6TO12.gif" title="保護級：未滿六歲之兒童不得使用。六歲以上未滿十二歲之兒童需由父母、師長或成年親友陪伴使用。" alt="age-rating" class="age-rating">
            </div>
            <div class="price-info-detail">
                <p class="info-main-price">NT 1950 元</p>
                <p class="info-feedback-point">紅利回饋：待更新</p>
                <div class="info-tips">?<p>1點可抵1元</p></div>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="section bg-black text-white">
            <h2>商品資訊2</h2>
            <a href="" class="detail-img-block">
                <span class="img-color-ns">NS</span>
                <div class="img-container">
                    <img src="https://p2.bahamut.com.tw/B/2KU/08/4367c592fecec4732ea2ef21371tbe85.JPG" alt="products-img">
                </div>
            </a>
        </div>
    </div>
</div>

<br />

<!-- 相關商品 -->
<div class="row g-0">
    <div class="col-sm-12">        
        <div class="section bg-danger text-white">
            <h2>相關商品</h2>
            <p>這裡是 相關商品 的內容。可以用來展示更多資訊。</p>
            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">商品連結</a>
        </div>
    </div>
</div>
        
<br />
        
<!-- 瀏覽紀錄 -->
<div class="row g-0">
    <div class="col-sm-12">        
        <div class="section bg-info text-white">
            <h2>瀏覽紀錄</h2>
            <p>這裡是 瀏覽紀錄 的內容。可以用來展示更多資訊。</p>
            <a class="nav-link text-white" asp-area="" asp-controller="Checkout" asp-action="Index">結帳連結</a>
        </div>
    </div>
</div>
        

        
    

    
